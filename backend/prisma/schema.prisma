// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PATIENT
  DOCTOR
  HOSPITAL_ADMIN
}

enum ReferralStatus {
  PENDING_SELECTION
  PENDING_APPOINTMENT
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum DoctorStatus {
  ACTIVE
  LIMITED_AVAILABILITY
  INACTIVE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  firstName String
  lastName  String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient       Patient?
  doctor        Doctor?
  hospitalAdmin HospitalAdmin?

  @@map("users")
}

model Patient {
  id              String   @id @default(uuid())
  userId          String   @unique
  dateOfBirth     DateTime
  address         String
  city            String
  state           String
  zipCode         String
  latitude        Float?
  longitude       Float?
  insuranceProvider String?
  insurancePolicyNumber String?
  medicalHistory  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  referrals   Referral[]
  appointments Appointment[]

  @@map("patients")
}

model Doctor {
  id             String       @id @default(uuid())
  userId         String       @unique
  specialization String
  licenseNumber  String       @unique
  hospitalName   String
  department     String
  status         DoctorStatus @default(ACTIVE)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdReferrals  Referral[]

  @@map("doctors")
}

model HospitalAdmin {
  id           String   @id @default(uuid())
  userId       String   @unique
  hospitalName String
  department   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("hospital_admins")
}

model Specialist {
  id                String   @id @default(uuid())
  firstName         String
  lastName          String
  specialization    String
  email             String   @unique
  phone             String
  hospitalName      String
  address           String
  city              String
  state             String
  zipCode           String
  latitude          Float?
  longitude         Float?
  acceptedInsurance String   // JSON array stored as string for SQLite compatibility
  availableDays     String   // JSON array stored as string for SQLite compatibility
  availableHours    String
  nextAvailableDate DateTime?
  rating            Float?   @default(0)
  completionRate    Float?   @default(0)
  avgWaitDays       Int?     @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  referrals    Referral[]
  appointments Appointment[]

  @@map("specialists")
}

model Referral {
  id                String         @id @default(uuid())
  patientId         String
  doctorId          String
  specialistId      String?
  specialization    String
  chiefComplaint    String
  clinicalNotes     String?
  urgency           String
  status            ReferralStatus @default(PENDING_SELECTION)
  matchedSpecialists String?      // JSON array of matched specialist IDs with scores
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  patient   Patient     @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor    Doctor      @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  specialist Specialist? @relation(fields: [specialistId], references: [id], onDelete: SetNull)
  appointment Appointment?

  @@map("referrals")
}

model Appointment {
  id              String            @id @default(uuid())
  referralId      String            @unique
  patientId       String
  specialistId    String
  appointmentDate DateTime
  appointmentTime String
  status          AppointmentStatus @default(SCHEDULED)
  notes           String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  referral  Referral   @relation(fields: [referralId], references: [id], onDelete: Cascade)
  patient   Patient    @relation(fields: [patientId], references: [id], onDelete: Cascade)
  specialist Specialist @relation(fields: [specialistId], references: [id], onDelete: Cascade)

  @@map("appointments")
}
